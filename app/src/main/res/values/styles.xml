<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="player_card_view" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:clipToPadding">false</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">8dp</item>
    </style>

    <style name="RoundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/dimen_8</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
    </style>

    <style name="common_text_white">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text_white_18_bold" parent="common_text_white">
        <item name="android:textSize">@dimen/text_size_18</item>
        <!--        <item name="android:fontFamily">@font/font_markot_regular</item>-->
    </style>

</resources>